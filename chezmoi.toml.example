[data]
name = ""

[data.git]
email = ""
signingKey = ""

[data.git.credential]
helper = "/mnt/c/Users/<user>/scoop/apps/git-credential-manager/current/git-credential-manager.exe"
helper = "netrc -f ~/.authinfo.gpg"

[data.github]
user = ""

[diff]
command = "~/git/ediff.sh"
# args = ["$LOCAL", "$REMOTE", "$MERGED", "$BASE"]
args = ["{{ .Target }}", "{{ .Destination }}"]

[merge]
command = "~/git/ediff.sh"
# args = ["$LOCAL", "$REMOTE", "$MERGED", "$BASE"]
args = ["{{ .Target }}", "{{ .Destination }}"]
